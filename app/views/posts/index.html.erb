<%= link_to "New post", new_post_path, class: 'btn btn-outline-primary ms-3' %>
<div class="container my-4">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <!-- Post Card -->
      <% @posts.each do |post| %> <%= link_to post_path(post) do %>
      <div class="card mb-3 post-detail">
        <div>
          <div class="d-flex card-header">
            <div>
                <h5 class="card-title mb-0"><%= post.user.name %></h5>
                <small class="text-muted">
                    <%= post.created_at.strftime("%Y-%m-%d %H:%M") %>
                </small>
                <% if post.draft? %>
                    <i class="fa fa-lock" title="Draft"></i>
                <% elsif post.published? %>
                    <i class="fa-solid fa-user" title="Published"></i>
                <% end %>
            </div>
          </div>
          <div class="card-body">
            <p class="card-text mt-3 post-content"><%= post.title %></p>
            <p><%= image_tag url_for(post.image) if post.image.attached? %></p>
            <div>
              <button class="btn btn-outline-primary btn-sm me-2">
                <i class="fas fa-thumbs-up"></i>
              </button>
              <button class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-comment"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
      <br>
      <% end %>
      <% end %>
    </div>
  </div>
</div>
