<%
=begin%>
 <%= javascript_include_tag 'post' %> 
<%
=end%>
<% posts.each do |post| %>
  <div id="<%= dom_id post %>">
    <%= link_to post_path(post) do %>
      <div class="card mb-3 post-detail">
        <div>
          <div class="d-flex card-header">
            <div>
              <h5 class="card-title mb-0"><%= post.user.name %></h5>
              <small class="text-muted">
                <%= post.decorate.created_at_formatted %>
              </small>
              <%= post.decorate.status_icon %>
            </div>
          </div>
          <div class="card-body">
            <p class="card-text mt-3 post-content"><%= post.title %></p>
            <p><%= image_tag url_for(post.image) if post.image.attached? %></p>
            <div>
              <button class="btn btn-outline-primary btn-sm me-2">
                <i class="fas fa-thumbs-up"></i>
              </button>
              <button class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-comment"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
      <br>
    <% end %>
  </div>
<% end %>
